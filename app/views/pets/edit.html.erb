<%= link_to "All Shelters", "/shelters" %><br>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :picture %>
  <%= text_field_tag :picture, @pet.picture %><br>

  <%= label_tag :name %>
  <%= text_field_tag :name, @pet.name %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description, @pet.description %><br>

  <%= label_tag :age %>
  <%= text_field_tag :age, @pet.age %><br>

  <%= label_tag :sex %>
  <%= text_field_tag :sex, @pet.sex %><br>

  <%= label_tag :adoption_status %>
  <%= text_field_tag :adoption_status, @pet.adoption_status  %><br>

  <%= submit_tag "Submit" %>
<% end %>
